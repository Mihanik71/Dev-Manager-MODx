<form>
	<table>
		<tr>
			<td>Название:</td>
			<td><input name="name" type="text" maxlength="100" value="[+name+]" class="inputBox" style="width:140px;"></td>
		</tr>
		<tr>
			<td>Заголовок:</td>
			<td><input name="caption" type="text" maxlength="255" value="[+caption+]" class="inputBox" style="width:300px;"></td>
		</tr>
		<tr>
			<td>Описание:</td>
			<td><input name="description" type="text" maxlength="255" value="[+description+]" class="inputBox" style="width:300px;"></td>
		</tr>
		<tr>
			<td>Тип ввода:</td>
			<td>[+type+]</td>
		</tr>
		<tr>
			<td>Возможные значения:</td>
			<td><textarea name="elements" maxlength="65535" class="inputBox">[+elements+]</textarea></td>
		</tr>
		<tr>
			<td>По умолчанию:</td>
			<td><textarea name="default_text" maxlength="65535" class="inputBox">[+default_text+]</textarea></td>
		</tr>
		<tr>
			<td>Отображение:</td>
			<td><input name="display" type="text" maxlength="50" value="[+display+]" class="inputBox" style="width:150px;"></td>
		</tr>
		<tr>
			<td>Категория:</td>
			<td>[+cat+]</td>
		</tr>
	</table>
</form>